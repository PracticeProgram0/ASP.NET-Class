
@model  model_bulid_in_html_helper.Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<style>

    /* Container */
    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    /* Form labels */
    .form-group label {
        display: block;
        font-weight: 600;
        margin-bottom: 8px;
        color: #343a40;
    }

    /* Textbox, password, and other inputs */
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        font-size: 16px;
        color: #495057;
        margin-bottom: 20px;
        box-sizing: border-box;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
        }

    /* Checkbox and Radio Buttons */
    .radio-group label {
        display: inline-block;
        margin-right: 15px;
        font-weight: 400;
    }

    input[type="checkbox"] {
        margin-right: 8px;
    }

    input[type="radio"] {
        margin-right: 5px;
    }

    /* Validation message styling */
    .validation-message {
        color: red;
        font-size: 12px;
        margin-top: -15px;
        margin-bottom: 15px;
    }

    /* Action links */
    .action-links {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

        .action-links a {
            text-decoration: none;
            color: #007bff;
            font-weight: 600;
            transition: color 0.3s ease;
        }

            .action-links a:hover {
                color: #0056b3;
            }
</style>
<body>
    <div class="container">
        <form>
            <div class="form-group">
                <label for="name">Name:</label>
                @Html.TextBox("TextBox", null, new { id = "id", @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="age">Age:</label>
                @Html.TextBox("TextBox", null, new { id = "id", @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                @Html.Password("TextBox", new { id = "id", @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="city">City:</label>
                @Html.TextBox("TextBox", null, new { id = "id", @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="subject">Subject:</label>
                @Html.CheckBox("TextBox", new { id = "id" }) Subject
            </div>
            <div class="form-group">
                <label>Gender:</label>
                <div class="radio-group">
                    <label>
                        @Html.RadioButtonFor(m => m.Gender, "Male") Male
                    </label>
                    <label>
                        @Html.RadioButtonFor(m => m.Gender, "Female") Female
                    </label>
                </div>
                @Html.ValidationMessageFor(m => m.Gender)
            </div>
            <div class="action-links">
                @Html.ActionLink("About us", "About")
                @Html.ActionLink("Index us", "Index", "Default")


            </div>
        </form>
    </div>
</body>
</html>
